{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "types": ["node", "./src/renderer/App/Shared/Theme/theme.d.ts"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dll",
    "paths": {
      "src/*": ["src/*"],
      "main/*": ["src/main/*"],
      "@Components/*": ["src/renderer/App/Shared/Components/*"],
      "@Theme/*": ["src/renderer/App/Shared/Theme/*"],
      "@Redux/*": ["src/renderer/App/Redux/*"],
      "generate-uuid": ["src/renderer/App/Shared/Utils/uuid.ts"]
    }
  },
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["release/build", "release/app/dist"]
}
