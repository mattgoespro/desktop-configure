{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dll",
    "paths": {
      "ipc/*": ["src/ipc/*"],
      "uuid-four": ["src/renderer/App/Shared/Utils/uuid-four.ts"],
      "shared/*": ["src/renderer/App/Shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["release/build", "release/app/dist"]
}
