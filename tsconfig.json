{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dll",
    "paths": {
      "main/*": ["src/main/*"],
      "ipc/*": [
        "src/main/ipc/*.ts",
        "src/main/ipc/channels/*",
        "src/main/ipc/events/*",
        "src/main/ipc/event-handlers/*"
      ],
      "uuid-four": ["src/renderer/App/Utils/uuid-four.ts"],
      "shared/*": ["src/renderer/App/Components/Shared/*"],
      "redux/*": ["src/renderer/App/Redux/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["release/build", "release/app/dist"]
}
